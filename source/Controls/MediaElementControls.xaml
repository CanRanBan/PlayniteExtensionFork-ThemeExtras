<PluginUserControl x:Class="Extras.Controls.MediaElementControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Extras.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                   d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type=local:MediaElementControls}">
    <Grid>
        <Slider x:Name="ScrubbingSlider" Maximum="{Binding ProgressMax}" Value="{Binding Progress}">
        </Slider>
    </Grid>
</PluginUserControl>
